<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>awe</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<groupId>AWE_build</groupId>
	<packaging>pom</packaging>

	<prerequisites>
		<maven>3.0</maven>
	</prerequisites>

	<properties>
		<tycho-version>0.9.0-SNAPSHOT</tycho-version>
	</properties>

	<profiles>
		<profile>
			<id>japa_src_build</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>org.amanzi.afp.j2</module>
			</modules>
			<build>
				<plugins>
					<plugin>
						<groupId>org.sonatype.tycho</groupId>
						<artifactId>tycho-maven-plugin</artifactId>
						<version>0.9.0-SNAPSHOT</version>
						<extensions>true</extensions>
					</plugin>
					<plugin>
						<groupId>org.sonatype.tycho</groupId>
						<artifactId>maven-osgi-compiler-plugin</artifactId>
						<version>0.9.0-SNAPSHOT</version>
						<configuration>
							<source>1.6</source>
							<target>1.6</target>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.sonatype.tycho</groupId>
						<artifactId>target-platform-configuration</artifactId>
						<version>0.9.0-SNAPSHOT</version>
						<configuration>
							<environments>
								<environment>
									<os>linux</os>
									<ws>gtk</ws>
									<arch>x86</arch>
								</environment>
								<environment>
									<os>win32</os>
									<ws>win32</ws>
									<arch>x86</arch>
								</environment>
								<environment>
									<os>macosx</os>
									<ws>carbon</ws>
									<arch>x86</arch>
								</environment>
							</environments>
						</configuration>
					</plugin>
				</plugins>
				<resources>
					<resource>
						<directory>src</directory>
						<includes>
							<include>**/*.properties</include>
						</includes>
					</resource>
				</resources>
			</build>
		</profile>

		<profile>
			<id>test_build</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>com.lowagie.itext</module>
				<module>net.refractions.udig.project</module>
				<module>net.refractions.udig.project.edit</module>
				<module>net.refractions.udig.project.ui</module>
				<module>net.refractions.udig.style.sld</module>
				<module>net.refractions.udig.ui</module>
				<module>org.amanzi.awe</module>
				<module>org.amanzi.awe.afp</module>
				<module>org.amanzi.awe.afp.ericsson</module>
				<module>org.amanzi.awe.afp.linux</module>
				<module>org.amanzi.awe.afp.macosx</module>
				<module>org.amanzi.awe.afp.testing</module>
				<module>org.amanzi.awe.afp.win32</module>
				<module>org.amanzi.awe.catalog.neo</module>
				<module>org.amanzi.awe.console</module>
				<module>org.amanzi.awe.l3messages</module>
				<module>org.amanzi.awe.startup.splash</module>
				<module>org.amanzi.awe.ui</module>
				<module>org.amanzi.awe.views.network</module>
				<module>org.amanzi.gef</module>
				<module>org.amanzi.integrator.awe</module>
				<module>org.amanzi.integrator.rdt</module>
				<module>org.amanzi.neo.core</module>
				<module>org.amanzi.neo.data-generator</module>
				<module>org.amanzi.neo.db</module>
				<module>org.amanzi.neo.loader</module>
				<module>org.amanzi.neo.loader.core</module>
				<module>org.amanzi.neo.loader.ui</module>
				<module>org.amanzi.neo.services</module>
				<module>org.amanzi.neo.services.ui</module>
				<module>org.amanzi.scripting.jruby</module>
				<module>org.amanzi.splash</module>
				<module>org.amanzi.testing</module>
				<module>org.apache.log4j</module>
				<module>org.jfree</module>
				<module>org.jruby</module>
				<module>org.kxml2</module>
				<module>org.neo4j</module>
				<module>org.neo4j.neoclipse</module>
				<module>org.rubypeople.rdt.core</module>
				<module>org.rubypeople.rdt.debug.core</module>
				<module>org.rubypeople.rdt.debug.ui</module>
				<module>org.rubypeople.rdt.launching</module>
				<module>org.rubypeople.rdt.refactoring</module>
				<module>org.rubypeople.rdt.ui</module>
			</modules>
			<build>
				<plugins>
					<plugin>
						<groupId>org.sonatype.tycho</groupId>
						<artifactId>tycho-maven-plugin</artifactId>
						<version>0.9.0-SNAPSHOT</version>
						<extensions>true</extensions>
					</plugin>
					<plugin>
						<groupId>org.sonatype.tycho</groupId>
						<artifactId>maven-osgi-compiler-plugin</artifactId>
						<version>0.9.0-SNAPSHOT</version>
						<configuration>
							<source>1.6</source>
							<target>1.6</target>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.sonatype.tycho</groupId>
						<artifactId>target-platform-configuration</artifactId>
						<version>0.9.0-SNAPSHOT</version>
						<configuration>
							<environments>
								<environment>
									<os>linux</os>
									<ws>gtk</ws>
									<arch>x86</arch>
								</environment>
								<environment>
									<os>win32</os>
									<ws>win32</ws>
									<arch>x86</arch>
								</environment>
								<environment>
									<os>macosx</os>
									<ws>carbon</ws>
									<arch>x86</arch>
								</environment>
							</environments>
						</configuration>
					</plugin>
				</plugins>
				<resources>
					<resource>
						<directory>src</directory>
						<includes>
							<include>**/*.properties</include>
						</includes>
					</resource>
				</resources>
			</build>
		</profile>

	</profiles>
</project>
