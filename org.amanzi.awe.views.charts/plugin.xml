<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.amanzi.awe.views.charts.ChartsView"
            id="org.amanzi.awe.views.charts.chartsview"
            name="Charts View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <viewShortcut
               id="org.amanzi.awe.views.charts.chartsview">
         </viewShortcut>
         <view
               id="org.amanzi.awe.views.charts.chartsview"
               minimized="false"
               relationship="top"
               relative="net.refractions.udig.catalog.ui.CatalogView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
