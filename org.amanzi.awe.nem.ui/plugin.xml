<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any">
            <command
                  commandId="org.amanzi.awe.nem.ui.delete"
                  label="Delete"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <iterate>
                     <instanceof
                           value="org.amanzi.awe.views.treeview.provider.ITreeItem">
                     </instanceof>
                  </iterate>
               </visibleWhen>
            </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.amanzi.awe.nem.ui.delete"
            name="Delete">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.amanzi.awe.nem.ui.handlers.DeleteHandler"
            commandId="org.amanzi.awe.nem.ui.delete">
         <activeWhen>
            <with
                  variable="activeMenuSelection">
               <test
                    forcePluginActivation="true"
                    property="org.amanzi.awe.nem.ui.isDeletable">
               </test>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.amanzi.awe.nem.ui.testers.DeletableTester"
            id="org.amanzi.awe.nem.ui.deletabletester"
            namespace="org.amanzi.awe.nem.ui"
            properties="isDeletable"
            type="org.eclipse.jface.viewers.IStructuredSelection">
      </propertyTester>
   </extension>

</plugin>
