<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <properties>
    <awe-scripting-version>1.0.0</awe-scripting-version>
    <tycho-version>0.15.0</tycho-version>
  </properties>  

  <groupId>org.amanzi</groupId>
  <artifactId>awe-scripting</artifactId>
  <version>${awe-scripting-version}</version>
  <packaging>pom</packaging>
  
  <repositories>
	<repository>
	  <id>indigo</id>
	  <layout>p2</layout>
	  <url>http://download.eclipse.org/releases/indigo</url>
	</repository>		
  </repositories>

  <modules>
    <module>org.amanzi.awe.scripting</module>
    <module>org.amanzi.awe.scripting.testing</module>
    <module>org.jruby</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
  </build>
</project>
