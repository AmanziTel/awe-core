<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<prerequisites>
		<maven>3.0</maven>
	</prerequisites>

	<properties>
		<tycho-version>0.13.0</tycho-version>
	</properties>

	<groupId>org.amanzi.awe</groupId>
	<artifactId>core</artifactId>
	<version>0.9.0</version>
	<packaging>pom</packaging>

	<dependencies>
		<dependency>
			<groupId>org.neo4j</groupId>
			<artifactId>org.neo4j.neoclipse</artifactId>
			<version>1.4.0</version>
			<optional>true</optional>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>udig_awe_platform</id>
			<layout>p2</layout>
			<url>file://home/hudson/target_platform/awe_target_repository</url>
		</repository>
	</repositories>
	
	<profiles>
		<profile>
			<id>awe-core</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>org.amanzi.awe</module>
				<module>org.amanzi.awe.catalog.neo</module>
				<module>org.amanzi.awe.console</module>
				<module>org.amanzi.awe.extras.feature</module>
				<module>org.amanzi.awe.feature</module>
				<module>org.amanzi.awe.neostyle</module>
				<module>org.amanzi.awe.project</module>
				<module>org.amanzi.awe.render.core</module>
				<module>org.amanzi.awe.render.drive</module>
				<module>org.amanzi.awe.render.network</module>
				<module>org.amanzi.awe.startup.splash</module>
				<module>org.amanzi.awe.ui</module>
				<module>org.amanzi.awe.views.drive</module>
				<module>org.amanzi.awe.views.explorer</module>
				<module>org.amanzi.awe.views.neighbours</module>
				<module>org.amanzi.awe.views.network</module>
				<module>org.amanzi.awe.views.property</module>
				<module>org.amanzi.awe.views.reuse</module>
				<module>org.amanzi.log4j</module>
				<module>org.amanzi.neo.db</module>
				<module>org.amanzi.neo.db.neoclipse</module>
				<module>org.amanzi.neo.loader.core</module>
				<module>org.amanzi.neo.loader.ui</module>
				<module>org.amanzi.neo.services</module>
				<module>org.amanzi.neo.services.ui</module>
				<module>org.amanzi.neo.services.ui.neoclipse</module>
				<module>org.jfree</module>
			</modules>
		</profile>
		<profile>
			<id>awe-core-test</id>
			<activation>	
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
				<module>org.amanzi.awe.catalog.neo</module>
				<module>org.amanzi.awe.catalog.neo.testing</module>
				<module>org.amanzi.awe.console</module>
				<module>org.amanzi.awe.startup.splash</module>
				<module>org.amanzi.log4j</module>
				<module>org.amanzi.neo.db</module>
				<module>org.amanzi.neo.db.testing</module>
				<module>org.amanzi.neo.loader.core</module>
				<module>org.amanzi.neo.loader.core.testing</module>
				<module>org.amanzi.neo.services</module>
				<module>org.amanzi.neo.services.testing</module>
				<module>org.amanzi.neo.services.ui</module>
				<module>org.amanzi.testing</module>
			</modules>
		</profile>
	<profile>
			<id>core</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
				<module>org.amanzi.awe</module>
				<module>org.amanzi.awe.catalog.neo</module>
				<module>org.amanzi.awe.console</module>
				<module>org.amanzi.awe.extras.feature</module>
				<module>org.amanzi.awe.feature</module>
				<module>org.amanzi.awe.neostyle</module>
				<module>org.amanzi.awe.render.core</module>
				<module>org.amanzi.awe.render.drive</module>
				<module>org.amanzi.awe.render.network</module>
				<module>org.amanzi.awe.startup.splash</module>
				<module>org.amanzi.awe.ui</module>
				<module>org.amanzi.awe.views.drive</module>
				<module>org.amanzi.awe.views.explorer</module>
				<module>org.amanzi.awe.views.neighbours</module>
				<module>org.amanzi.awe.views.network</module>
				<module>org.amanzi.awe.views.property</module>
				<module>org.amanzi.awe.views.reuse</module>
				<module>org.amanzi.log4j</module>
				<module>org.amanzi.neo.db</module>
				<module>org.amanzi.neo.db.neoclipse</module>
				<module>org.amanzi.neo.loader.core</module>
				<module>org.amanzi.neo.loader.ui</module>
				<module>org.amanzi.neo.services</module>
				<module>org.amanzi.neo.services.ui</module>
				<module>org.amanzi.neo.services.ui.neoclipse</module>
				<module>org.jfree</module>
			</modules>
		</profile>
	</profiles>
	
	<build>
	  <plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
		 		<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<resolver>p2</resolver>
					<pomDependencies>consider</pomDependencies>
					<environments>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>carbon</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
	  </plugins>
  </build>
	
</project>
