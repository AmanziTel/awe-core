<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Amanzi"
            id="org.amanzi.scripting.jirb.console">
      </category>
      <view
            name="Ruby Console"
            icon="icons/sample.gif"
            category="org.amanzi.scripting.jirb.console"
            class="org.amanzi.scripting.jirb.console.RubyConsole"
            id="org.amanzi.scripting.jirb.console.RubyConsole">
      </view>
      <view
            name="Simple Ruby Console"
            icon="icons/sample.gif"
            category="org.amanzi.scripting.jirb.console"
            class="org.amanzi.scripting.jirb.console.SimpleRubyConsole"
            id="org.amanzi.scripting.jirb.console.SimpleRubyConsole">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.amanzi.scripting.jirb.console.RubyConsole">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
