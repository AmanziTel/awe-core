<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="KPI Builder"
            icon="icons/sample.gif"
            category="org.amanzi.awe.script"
            class="org.amanzi.awe.views.kpi.KpiView"
            id="org.amanzi.awe.views.kpi.KpiView">
      </view>
   </extension>
      <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.amanzi.awe.perspective">
         <view
               id="org.amanzi.awe.views.kpi.KpiView"
               relationship="stack"
               relative="net.refractions.udig.catalog.ui.CatalogView"
               visible="true">
         </view>
         <viewShortcut
               id="org.amanzi.awe.views.kpi.KpiView">
         </viewShortcut>
      </perspectiveExtension>
   </extension>

</plugin>
