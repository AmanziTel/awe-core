<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="Neighbours"
            icon="icons/neighbour.png"
            category="org.amanzi.awe.script"
            class="org.amanzi.awe.views.neighbours.views.NeighboursView"
            id="org.amanzi.awe.views.neighbours.views.NeighboursView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Transmission"
            icon="icons/transmission.png"
            category="org.amanzi.awe.script"
            class="org.amanzi.awe.views.neighbours.views.TransmissionView"
            id="org.amanzi.awe.views.neighbours.views.TransmissionView">
      </view>
   </extension>   
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.amanzi.awe.perspective">
         <view
               id="org.amanzi.awe.views.neighbours.views.NeighboursView"
               relationship="stack"
               relative="net.refractions.udig.catalog.ui.CatalogView"
               visible="true">
         </view>
         <viewShortcut
               id="org.amanzi.awe.views.neighbours.views.NeighboursView">
         </viewShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.amanzi.awe.perspective">
         <view
               id="org.amanzi.awe.views.neighbours.views.TransmissionView"
               relationship="stack"
               relative="net.refractions.udig.catalog.ui.CatalogView"
               visible="true">
         </view>
         <viewShortcut
               id="org.amanzi.awe.views.neighbours.views.TransmissionView">
         </viewShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.amanzi.afp.perspective">
         <view
               id="org.amanzi.awe.views.neighbours.views.NeighboursView"
               relationship="stack"
               relative="net.refractions.udig.catalog.ui.CatalogView"
               visible="true">
         </view>
         <viewShortcut
               id="org.amanzi.awe.views.neighbours.views.NeighboursView">
         </viewShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.amanzi.afp.perspective">
         <view
               id="org.amanzi.awe.views.neighbours.views.TransmissionView"
               relationship="stack"
               relative="net.refractions.udig.catalog.ui.CatalogView"
               visible="true">
         </view>
         <viewShortcut
               id="org.amanzi.awe.views.neighbours.views.TransmissionView">
         </viewShortcut>
      </perspectiveExtension>
   </extension>

</plugin>
