<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Database Project Explorer"
            icon="icons/project.png"
            category="org.amanzi.awe.views"
            class="org.amanzi.awe.views.explorer.view.ProjectExplorerView"
            id="org.amanzi.awe.views.explorer.view.ProjectExplorerView">
      </view>
      
   </extension>
    
     <extension
           point="org.eclipse.ui.services">
        <sourceProvider
              provider="org.amanzi.awe.views.explorer.providers.SourceProvider">
           <variable
                 name="org.amanzi.awe.views.explorer.view"
                 priorityLevel="workbench">
           </variable>
        </sourceProvider>
     </extension> 
     
     <extension point="org.eclipse.ui.handlers">
      <handler
            class="org.amanzi.awe.views.explorer.view.menu.commands.ShowInTreeCommand"
            commandId="org.amanzi.awe.views.explorer.menu.showInView">
            <activeWhen>
            <with
                  variable="org.amanzi.awe.views.explorer.view">
               <or>
                  <equals value="true">
                  </equals>
               </or>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.amanzi.awe.views.explorer.menu.showInView"
            name="ShowView">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.amanzi.awe.views.explorer.view.ProjectExplorerView">
         <command
               commandId="org.amanzi.awe.views.explorer.menu.showInView"
               label="Show in View"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.amanzi.awe.perspective">
         <view
               id="org.amanzi.awe.views.explorer.view.ProjectExplorerView"
               minimized="false"
               ratio="0.35"
               relationship="top"
               relative="net.refractions.udig.project.ui.layerManager"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   
</plugin>
