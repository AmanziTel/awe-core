            name="2G filter"
            onToolbar="true"
            tooltip="Show only 2g network">
      </modalTool>
      <modalTool
			categoryId="FilterTool"
            class="org.amanzi.awe.tool.star.FilterToolOnly3G"
            icon="icons/star_32.png"
