<plugin>
   <extension point="net.refractions.udig.project.ui.tool">
      <modalTool
			categoryId="StarTool"
            class="org.amanzi.awe.tool.star.StarTool"
            icon="icons/star_32.png"
            id="org.amanzi.awe.tool.star.StarTool"
            name="Star Tool"
            onToolbar="true"
            tooltip="Star mode for selecting network elements to analyse">
      </modalTool>
      <modalTool
			categoryId="FilterTool"
            class="org.amanzi.awe.tool.star.FilterToolRemove"
            icon="icons/star_32.png"
            id="org.amanzi.awe.tool.star.FilterToolRemove"
            name="No Filters"
            onToolbar="true"
            tooltip="Remove all filters">
      </modalTool>
      <modalTool
			categoryId="FilterTool"
            class="org.amanzi.awe.tool.star.FilterToolOnly2G"
            icon="icons/star_32.png"
