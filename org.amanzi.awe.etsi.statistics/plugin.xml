<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

	<extension
          point="org.eclipse.ui.commands">
       <command
             categoryId="org.amanzi.awe.statistics.commands.category"
             id="org.amanzi.awe.statistics.commands.ETSIStatistics"
             name="Calculate ETSI statistics">
       </command>
    </extension>
    
    <extension
          point="org.eclipse.ui.handlers">
       <handler
             class="org.amanzi.awe.etsi.statistics.handlers.ETSIStatisticsHandler"
             commandId="org.amanzi.awe.statistics.commands.ETSIStatistics">
       </handler>
    </extension>

	<extension
          point="org.eclipse.ui.menus">
       <menuContribution
             locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
          <toolbar
                id="org.amanzi.neo.loader.toolbar.etsi">             
             <command
                   commandId="org.amanzi.awe.statistics.commands.ETSIStatistics"
            icon="icons/splash_16.png"
            id="org.amanzi.awe.statistics.commands.ETSIStatistics"
                   tooltip="Calculate ETSI statistics">
             </command>
          </toolbar>
       </menuContribution>
    </extension>   
</plugin>