<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.neo4j.examples</groupId>
	<artifactId>apoc-examples</artifactId>
	<name>apoc-examples</name>
	<version>0.1</version>
	<description>Basic Neo4j examples</description>
	<parent>
		<groupId>org.neo4j</groupId>
		<artifactId>parent-pom</artifactId>
		<version>3</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>org.neo4j</groupId>
			<artifactId>apoc</artifactId>
			<version>0.1</version>
			<type>pom</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>appassembler-maven-plugin
				</artifactId>
				<configuration>
					<repositoryLayout>flat</repositoryLayout>
					<repositoryName>lib</repositoryName>
					<includeConfigurationDirectoryInClasspath>false
					</includeConfigurationDirectoryInClasspath>
					<platforms>
						<platform>windows</platform>
						<platform>unix</platform>
					</platforms>
					<programs>
						<program>
							<mainClass>org.neo4j.examples.apoc.EmbeddedNeoExample
							</mainClass>
							<name>embedded-neo-example</name>
						</program>
						<program>
							<mainClass>
								org.neo4j.examples.apoc.EmbeddedNeoWithIndexingExample
							</mainClass>
							<name>embedded-neo-with-indexing-example</name>
						</program>
						<program>
							<mainClass>org.neo4j.examples.apoc.ShellExample
							</mainClass>
							<name>shell-example</name>
						</program>
					</programs>
				</configuration>
				<executions>
					<execution>
						<id>examples</id>
						<phase>package</phase>
						<goals>
							<goal>assemble</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<finalName>neo4j-apoc-${project.version}</finalName>
					<descriptors>
						<descriptor>src/main/assembly/apoc-assembly.xml
						</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>apoc-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
